apiVersion: v1
kind: Secret
metadata:
  name: wcagai-secrets
  namespace: wcagai
type: Opaque
stringData:
  # Redis
  redis-url: "redis://redis:6379"
  redis-password: "<REDIS_PASSWORD>"

  # Database
  database-url: "postgresql://user:password@postgres:5432/wcagai?schema=public"
  database-replica-urls: "postgresql://user:password@postgres-replica-1:5432/wcagai,postgresql://user:password@postgres-replica-2:5432/wcagai"

  # CDN - CloudFlare
  cloudflare-zone-id: "<CLOUDFLARE_ZONE_ID>"
  cloudflare-api-token: "<CLOUDFLARE_API_TOKEN>"

  # CDN - CloudFront
  aws-access-key-id: "<AWS_ACCESS_KEY_ID>"
  aws-secret-access-key: "<AWS_SECRET_ACCESS_KEY>"
  cloudfront-distribution-id: "<CLOUDFRONT_DISTRIBUTION_ID>"

  # AI - Google Gemini
  gemini-api-key: "<GEMINI_API_KEY>"

---
# Note: In production, use external secret management:
# - AWS Secrets Manager
# - HashiCorp Vault
# - Sealed Secrets
# - External Secrets Operator
